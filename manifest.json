{
  "manifest_version": 3,
  "name": "Auto Refresher",
  "version": "1.0",
  "description": "Auto-refresh the current tab at specified intervals",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Refresher"
  },
  "background": {
    "service_worker": "background.js"
  }
}
